<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>mensaje_es</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <validator>
        <validator-id>validadorEmail</validator-id>
        <validator-class>com.asociate.validador.ValidadorEmail</validator-class>
    </validator>
    <validator>
        <validator-id>validadorNIF</validator-id>
        <validator-class>com.asociate.validador.ValidadorNIF</validator-class>
    </validator>
</faces-config>
