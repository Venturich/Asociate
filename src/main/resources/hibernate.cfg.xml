<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <property name="hibernate.connection.datasource">java:comp/env/jdbc/asociate</property>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>
        <property name="hibernate.jdbc.batch_size">20</property>
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.cache.region.factory_class"> 
            org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
        <mapping class="com.asociate.modelo.Post"/>
        <mapping class="com.asociate.modelo.Usuario"/>
        <mapping class="com.asociate.modelo.Comentario"/>
        <mapping class="com.asociate.modelo.Subforo"/>
        <mapping class="com.asociate.modelo.Pueblo"/>
        <mapping class="com.asociate.modelo.Notificacion"/>
        <mapping class="com.asociate.modelo.Pais"/>
        <mapping class="com.asociate.modelo.Mensajeria"/>
        <mapping class="com.asociate.modelo.Hilo"/>
        <mapping class="com.asociate.modelo.Directorio"/>
        <mapping class="com.asociate.modelo.Persona"/>
        <mapping class="com.asociate.modelo.EventoAsistentes"/>
        <mapping class="com.asociate.modelo.Direccion"/>
        <mapping class="com.asociate.modelo.Socio"/>
        <mapping class="com.asociate.modelo.Provincia"/>
        <mapping class="com.asociate.modelo.Asociacion"/>
        <mapping class="com.asociate.modelo.Evento"/>
         <mapping class="com.asociate.modelo.Amistad"/>
    </session-factory>
</hibernate-configuration>
